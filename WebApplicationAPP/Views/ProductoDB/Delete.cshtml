@model WebApplicationAPP.Models.Producto

@{
    ViewData["Title"] = "Eliminar Producto";
}

<h2>Eliminar Producto</h2>

<h4>¿Estás seguro que deseas eliminar este producto?</h4>

<div>
    <strong>Nombre:</strong> @Model.Nombre
</div>

<div>
    <strong>Precio:</strong> @Model.Precio
</div>

<div>
    <strong>Stock:</strong> @Model.Stock
</div>

<br />

<form asp-action="Delete">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Eliminar</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>
